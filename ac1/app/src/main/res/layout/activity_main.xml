<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titulo_topo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÉDIA SEMESTRAL"
        android:textColor="#673AB7"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/tv_digite_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Digite o seu nome:"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_topo"
        tools:layout_editor_absoluteX="122dp" />

    <EditText
        android:inputType="text"
        android:id="@+id/et_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Seu nome"
        android:textColor="#BBBBBB"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv_digite_nome"
        tools:layout_editor_absoluteX="99dp" />

    <TextView
        android:id="@+id/tv_nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Digite a primeira média:"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/et_nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Primeira nota"
        android:textColor="#BBBBBB"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv_nota1"
        tools:layout_editor_absoluteX="99dp" />

    <TextView
        android:id="@+id/tv_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Digite a segunda média:"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_nota1"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/et_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Segunda nota"
        android:textColor="#BBBBBB"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv_nota2"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/bt_ver-situacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="VER SITUAÇÃO"
        android:onClick="verSituacao"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/et_nota2"
        tools:layout_editor_absoluteX="154dp" />


</androidx.constraintlayout.widget.ConstraintLayout>